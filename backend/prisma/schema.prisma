generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  theme    = "dark"
  output   = "../ERD.svg"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//? Comando para executar a migration: 
//? npx prisma migrate dev --name initial

model Empresa {
  id          Int       @id @default(autoincrement())
  tipo        String
  cpfCnpj     String    @map("cpf_cnpj")
  nome        String
  telefone    String?
  email       String?
  endereco    String?
  cidade      String?
  estado      String?
  cep         String?
  status      String    @default("ativo")
  observacoes String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @map("updated_at")

  usuarios        Usuario[]
  categorias      Categoria[]
  produtos        Produto[]
  controleProduto ControleProduto[]
  fornecedores    Fornecedor[]

  @@map("empresa")
}

model Usuario {
  id         Int       @id @default(autoincrement())
  nome       String
  usuario    String    @unique
  senha      String
  email      String    @unique
  cpf        String
  token      String?
  perfil_id  Int
  empresa_id Int
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @map("updated_at")

  perfilFk  Perfil?  @relation(fields: [perfil_id], references: [id])
  empresaFk Empresa? @relation(fields: [empresa_id], references: [id])

  @@map("usuario")
}

model Perfil {
  id        Int       @id @default(autoincrement())
  codigo    String?
  nome      String
  acessos   String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")

  perfis Usuario[]

  @@map("perfil")
}

model Categoria {
  id         Int       @id @default(autoincrement())
  codigo     String?
  empresa_id Int
  nome       String
  descricao  String
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @map("updated_at")

  empresaFk Empresa?  @relation(fields: [empresa_id], references: [id])
  produtos  Produto[]

  @@map("categoria")
}

model Produto {
  id                 Int       @id @default(autoincrement())
  codigo             String?
  empresa_id         Int
  nome               String
  categoria_id       Int
  descricao          String?
  quantidade_produto Int
  data_validade      DateTime?
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime? @map("updated_at")

  empresaFk   Empresa   @relation(fields: [empresa_id], references: [id])
  categoriaFk Categoria @relation(fields: [categoria_id], references: [id])

  ControleProduto ControleProduto[]

  @@map("produto")
}

model ControleProduto {
  id            Int       @id @default(autoincrement())
  tipo          String
  empresa_id    Int
  produto_id    Int
  fornecedor_id Int?
  quantidade    Int
  valor_unidade Decimal   @default(0)
  valor_total   Decimal   @default(0)
  data_estorno  DateTime?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @map("updated_at")

  empresaFk    Empresa     @relation(fields: [empresa_id], references: [id])
  produtoFk    Produto     @relation(fields: [produto_id], references: [id])
  fornecedorFk Fornecedor? @relation(fields: [fornecedor_id], references: [id])

  @@map("controle_produto")
}

model Fornecedor {
  id         Int       @id @default(autoincrement())
  empresa_id Int
  nome       String
  cpfCnpj    String
  telefone   String
  email      String
  observacao String?
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @map("updated_at")

  empresaFk       Empresa           @relation(fields: [empresa_id], references: [id])
  ControleProduto ControleProduto[]

  @@map("fornecedor")
}
